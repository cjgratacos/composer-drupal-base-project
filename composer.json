{
    "name": "carlos/grader-app",
    "description": "Grading Web App",
    "type": "project",
    "license": "GNU GPL3",
    "authors": [
        {
            "name": "cjgratacos",
            "email": "cjgratacos@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php":"~7.1",
        "cweagans/composer-patches": "^1.5.0",
        "composer/installers": "1.2.0",
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "drupal/core": "^8.3.4",
        "webflo/drupal-core-strict": "^8.3.4",
        "drupal/openapi": "1.0.0-alpha1",
        "drupal/jsonapi": "1.0.0",
        "drupal/simple_oauth": "2.0-rc2",
        "drush/config-extra": "^8.0@dev",
        "drupal/console":"~1.0"
    },
    "require-dev":{
        "drush/drush": "~8.0",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsstream": "~1.2",
        "symfony/css-selector": "~2.8",
        "consolidation/robo": "^1.0.0",
        "drupal/devel":"^1.0@dev",
        "drupal/examples":"^1.0@dev"
    },
    "autoload": {
      "psr-4": {
        "cjgratacos\\Deployment\\Composer\\":"scripts/composer"
      }
    },
    "scripts": {
        "post-install-cmd": [
          "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
          "cjgratacos\\Deployment\\Composer\\Handler::createLinks"
        ],
        "dev:server:install": "cjgratacos\\Deployment\\Composer\\Handler::siteInstallDev",
        "dev:server:up": "cjgratacos\\Deployment\\Composer\\Handler::runServer",
        "test": "./vendor/bin/robo test",
        "drupalRoot": "cd web/",
        "cmd:drush:cr":[
          "@cdrupalRoot",
          "../vendor/bin/drush cr"
        ],
        "cmd:drupal:services":[
          "@drupalRoot",
          "../vendor/bin/drupal debug:container"
        ]
    },
    "extra": {
       "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}":[
          "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "web/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
        "enable-patching":true,
        "dev:db":{
          "password": "password",
          "driver":"sqlite",
          "path":"sites/default/files/"
        },
        "dev:server:port": 8888
    },
    "config": {
        "bin-dir": "vendor/bin/"
    }
}
